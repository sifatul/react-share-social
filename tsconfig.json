

{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2015",
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
  },
  "include": ["src/**/*","index.*"]
}